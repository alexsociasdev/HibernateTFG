<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuraci칩n de base de datos -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/MM_ASG?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1349</property>

        <!-- Configuraci칩n de SQL -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Configuraci칩n de hbm2ddl -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapear clases de entidades -->
        <mapping class="com.dam.tfg.MotoMammiApplicationASG.Models.Provider"/>

        <!-- Puedes a침adir otras clases como sea necesario -->
        <!-- <mapping class="com.dam.tfg.MotoMammiApplicationASG.tasks.OtherEntity"/> -->
    </session-factory>
</hibernate-configuration>
