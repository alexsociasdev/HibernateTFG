<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuración de base de datos -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/MM_ASG?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1349</property>

        <!-- Configuración de SQL -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Configuración de hbm2ddl -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapear clases de entidades -->
        <mapping class="com.dam.tfg.MotoMammiApplicationASG.Models.Provider"/>
        <mapping class="com.dam.tfg.MotoMammiApplicationASG.Models.Customer"/>
        <mapping class="com.dam.tfg.MotoMammiApplicationASG.Models.Vehicle"/>
        <mapping class="com.dam.tfg.MotoMammiApplicationASG.Models.Interface"/>
        <mapping class="com.dam.tfg.MotoMammiApplicationASG.Models.Translations"/>

    </session-factory>
</hibernate-configuration>
